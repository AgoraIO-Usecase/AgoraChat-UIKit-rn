{
  "name": "react-native-chat-callkit",
  "version": "0.1.1-beta.1",
  "description": "test",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index",
  "files": [
    "assets",
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest --no-watchman",
    "typescript": "tsc --noEmit",
    "lint": "yarn run eslint \"src/**/*.{js,ts,tsx}\"",
    "prepare": "yarn run gl",
    "release": "release-it",
    "bootstrap": "yarn install",
    "gl": "bob build",
    "cg": "del lib && del src/version.ts",
    "generate-bundle": "node scripts/bundle-icons.js",
    "change-icon-name": "node scripts/change-icons-name.js"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/easemob/react-native-chat-library",
  "author": "asteriskzuo <zuoyuhsywn@hotmail.com> (https://github.com/easemob)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/easemob/react-native-chat-library/issues"
  },
  "homepage": "https://github.com/easemob/react-native-chat-library#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "~0.70.0",
    "@types/react-native-vector-icons": "^6.4.12",
    "@types/react-native-video": "^5.0.14",
    "@types/uuid": "^8.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-satya164": "^3.1.11",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "17.0.2",
    "react-native": "0.68.5",
    "react-native-builder-bob": "^0.20.1",
    "release-it": "^15.0.0",
    "typescript": "~5.0.4"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "dependencies": {
    "@react-native-camera-roll/camera-roll": "^5.2.0",
    "@react-native-community/blur": "^4.3.0",
    "@rneui/base": "^4.0.0-rc.7",
    "@rneui/themed": "^4.0.0-rc.7",
    "react-native-agora": "^4.1.2",
    "react-native-chat-sdk": "1.1.2-beta.5",
    "react-native-device-info": "^10.4.0",
    "react-native-fast-image": "^8.6.3",
    "react-native-get-random-values": "^1.8.0",
    "react-native-pager-view": "^6.1.1",
    "react-native-paper": "^4.12.5",
    "react-native-permissions": "^3.6.1",
    "react-native-safe-area-context": "^4.4.1",
    "react-native-screens": "^3.18.2",
    "react-native-tab-view": "^3.3.0",
    "pure-uuid": "~1.6.3"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-native": ">=0.68.5",
    "react-native-agora": ">=4.1.0",
    "react-native-chat-sdk": ">=1.0.7"
  },
  "peerDependenciesMeta": {
    "react-native-fast-image": {
      "optional": true
    }
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
